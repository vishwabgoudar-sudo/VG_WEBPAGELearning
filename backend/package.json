{
  "name": "vg-learning-backend",
  "version": "1.0.0",
  "private": true,
  "description": "Enterprise-style TypeScript Express backend for VG Learning",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit",
    "test": "TS_NODE_PROJECT=tsconfig.test.json mocha --require ts-node/register/transpile-only --require source-map-support/register --extension ts \"test/**/*.test.ts\"",
    "test:coverage": "nyc npm run test"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.20",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.6",
    "@types/supertest": "^6.0.3",
    "chai": "^4.5.0",
    "mocha": "^11.0.1",
    "nyc": "^17.1.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.3"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/config/**",
      "src/server.ts"
    ],
    "reporter": [
      "text",
      "lcov"
    ],
    "all": true,
    "check-coverage": true,
    "lines": 99,
    "functions": 99,
    "branches": 99,
    "statements": 99,
    "require": [
      "ts-node/register"
    ]
  }
}